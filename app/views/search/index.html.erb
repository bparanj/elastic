<h1>Articles Search</h1>

<%= form_tag(search_path, method: :get) do  %>
  <p>
    <%= text_field_tag :q, params[:q] %>
    <%= submit_tag "Search" %>
  </p>
<% end %>

<ul>
	
  <% @articles.each do |article| %>
    <li>
      <h3>
        <%= article.title %>
      </h3>
	  <p> <%= article.content %> </p>
    </li>
  <% end %>
</ul>